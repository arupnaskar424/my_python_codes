import random
def guess_game():
    secret_number=random.randint(0,50)
    guess_count=1
    guess_limit=10
    while guess_count<=guess_limit:
        guess=int(input('guess the secret number between 0 to 50: '))
        if guess==secret_number:
            print(f'congratulation!! you guessed it right!!\nyou took {guess_count} steps to guess')
            break
        elif guess>secret_number:
            print('you entered a larger number, please try with smaller number')
            guess_count+=1
            continue
        else:
            print('you entered a smaller number, please try with larger number')
            guess_count += 1
            continue
    else:
        print('sorry!! you lost the game:')


print('welcome to "GUESS THE CORRECT NUMBER" \n enter any number between 0 to 50')

while True:
    user_input = input('enter start to start the game: ')
    if user_input.lower()=='start':
        guess_game()
        break
    else:
        print('you entered invalid input!! please enter start')
        continue
x=input('want to play again? (y/n): ')
if x.lower()=='y':
    guess_game()
elif x.lower()=='n':
    pass
else:
    print('invalid input!!! quiting the game')

